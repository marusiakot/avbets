<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
<% end %>


<div class="row">
  <div class="col-md-12"
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
          <div class="control-label col-sm-12">
            <%= f.label :title %>
          </div>    
       <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Событие", autofocus: true %>
          </div>  
        </div>
    <div class="form-group">
      <div class="control-label col-sm-12">    
         <%= f.label :description %>
      </div>   
      <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Прогноз" %>
      </div>
    <div class="form-group">
      <div class="control-sm-offset-2 col-sm-10">  
          <%= f.submit class: "btn btn-primary btn-large" %>      
      </div>
    </div>  
<% end %>

  <div class="col-xs-4 col-xs-offset-4">
    [<%= link_to "Вернуться к прогнозам", articles_path %>]
  </div>
</div>
</div>
    

